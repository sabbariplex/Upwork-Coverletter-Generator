{
  "manifest_version": 3,
  "name": "Upwork Cover Letter Generator",
  "version": "1.0",
  "description": "Automatically generates cover letters for Upwork job applications based on job descriptions",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://www.upwork.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.upwork.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Upwork Cover Letter Generator",
    "default_icon": {
      "16": "upwork.png",
      "32": "upwork.png"
    }
  },
  "icons": {
    "16": "upwork.png",
    "32": "upwork.png",
    "48": "upwork.png",
    "128": "upwork.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["settings.html", "subscription.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
